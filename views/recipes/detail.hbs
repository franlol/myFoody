<form action="/recipes/:id/edit" method="post">
  <input type="text" name="id" value="{{recipe._id}}">
  <button type="submit">Edit</button>
</form>
<form action="/recipes/{{recipe._id}}/delete" method="POST">
 <button type="submit">Delete recipe</button>
</form>
{{/if }}
